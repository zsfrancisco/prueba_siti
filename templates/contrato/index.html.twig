{% extends 'base.html.twig' %}

{% block title %}Contrato index{% endblock %}

{% block body %}
    <h1>Contrato index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num_con</th>
                <th>Vig_con</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contrato in contratos %}
            <tr>
                <td>{{ contrato.id }}</td>
                <td>{{ contrato.numCon }}</td>
                <td>{{ contrato.vigCon ? contrato.vigCon|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('contrato_show', {'id': contrato.id}) }}">show</a>
                    <a href="{{ path('contrato_edit', {'id': contrato.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contrato_new') }}">Create new</a>
{% endblock %}
